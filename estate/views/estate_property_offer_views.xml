<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="estate_property_offer_view_list" model="ir.ui.view">
            <field name="name">estate.property.offer.list</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list string="Offers">
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <button type="action" name="%(estate.property.offer.action_accept)d" string="Accept"/>
                    <button type="action" name="%(estate.property.offer.action_refuse)d" string="Refuse"/>
                    <field name="status"/>
                </list>
            </field>
        </record>
    </data>
</odoo>